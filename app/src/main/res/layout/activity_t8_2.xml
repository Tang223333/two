<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.T8_2Activity">

    <EditText
        android:id="@+id/t8_2_et1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="79dp"
        android:hint="金币"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textColorHint="#666"
        android:maxLength="5"
        android:singleLine="true"
        android:inputType="number" />

    <EditText
        android:id="@+id/t8_2_et2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="567dp"
        android:layout_marginTop="79dp"
        android:hint="剩余金币"
        android:textColor="@color/black"
        android:textColorHint="#666"
        android:textSize="20sp"
        android:maxLength="5"
        android:singleLine="true"
        android:inputType="number" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="260dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="类型:" />

    <Spinner
        android:id="@+id/t8_2_sp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="275dp"
        android:layout_marginBottom="262dp"
        android:entries="@array/InOutType"/>

    <TextView
        android:id="@+id/t8_2_txt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="230dp"
        android:layout_marginBottom="265dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="TextView" />

    <Button
        android:id="@+id/t8_2_btn1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="196dp"
        android:layout_marginBottom="105dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="返回" />

    <Button
        android:id="@+id/t8_2_btn2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="641dp"
        android:layout_marginBottom="105dp"
        android:background="#f00"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="提交日志" />
</RelativeLayout>