        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="2"/>

    <TextView
        android:id="@+id/item_t10_c_txt3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
