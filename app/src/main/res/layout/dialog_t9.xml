<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="400dp"
    android:layout_height="250dp"
    android:background="@drawable/shape_t9"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center"
        android:id="@+id/dialog_t9_txt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:text="返回"
            android:id="@+id/dialog_t9_btn1"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_marginLeft="40dp"
            android:textSize="20sp"
            android:background="#f00"
            android:text="提交日志"
            android:id="@+id/dialog_t9_btn2"/>
    </LinearLayout>

</LinearLayout>